<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llParentView"
    android:layout_width="296dp"
    android:layout_height="56dp"
    android:layout_gravity="center"
    android:background="@drawable/rounded_corner_button_white_semi"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right_grey"
        android:visibility="gone" />

    <com.avipras.customviews.CustomTextViewSemiBold
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="@string/retry"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/descSizeLarge" />
</LinearLayout>